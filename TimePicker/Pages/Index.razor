@page "/"

<MudTextField @bind-Value="_currentDateTime" T="DateTime?" Format="s" Label="DateTimeLocal" InputType="InputType.DateTimeLocal"/>
<MudButton OnClick="ProcessSomething" Variant="Variant.Filled" Color="Color.Primary">Snooze</MudButton>
@code {
    private DateTime _dateTime = new DateTime();
    private DateTime? _currentDateTime;

    protected override void OnInitialized()
    {
        _currentDateTime = DateTime.Now;
    }
    
    private void ProcessSomething()
    {
        _currentDateTime = _currentDateTime?.AddMinutes(10);
    }

}